<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_4"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.marvedie.servicesmarketapp.MpesaActivity">

    <ImageView
        android:id="@+id/mpesa"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/mpesa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enter PhoneNumber"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Phone Number"
        android:inputType="number" />
    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Amount"
        android:inputType="number" />
    <info.hoang8f.widget.FButton
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Request MPESA"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fButtonColor="@color/green_300"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/grey_600"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />
    <info.hoang8f.widget.FButton
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fButtonColor="@color/purple_400"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/grey_600"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />
</LinearLayout>
</ScrollView>